upstream up_app {
  server localhost:50000;

}
upstream up_auth {
  server localhost:50001;

}

# If servername not managed, return a 444 (Connection closed without response)
server {
  listen 443 ssl default_server;

  server_name _;
  return 444;

  ssl_certificate /etc/nginx/ssl/self-signed.crt;
  ssl_certificate_key /etc/nginx/ssl/self-signed.key;
}

# App HTTP -> HTTPS redirect
server {
  listen 80;
  server_name {{ francoralite_nginx_server_name }};
  rewrite ^(.*) https://$host$1 permanent;

  location ^~ /.well-known/acme-challenge/ {
    default_type "text/plain";
    alias /var/www/acme-challenge/;
  }
}

# Auth HTTP -> HTTPS redirect
server {
  listen 80;
  server_name {{ francoralite_auth_nginx_server_name }};
  rewrite ^(.*) https://$host$1 permanent;

  location ^~ /.well-known/acme-challenge/ {
    default_type "text/plain";
    alias /var/www/acme-challenge/;
  }
}

server {
  listen 443 ssl http2;
  server_name {{ francoralite_nginx_server_name }};

  client_max_body_size 150M;
  #
  # Buffers
  #
  proxy_buffer_size 512k;
  proxy_buffers 4 1024k;
  proxy_busy_buffers_size 1024k;
  #
  # Compress
  #
  gzip on;
  gzip_types application/javascript
             application/json
             application/x-javascript
             application/xml
             text/css
             text/javascript
             text/less
             text/plain
             text/xml;
  #
  # Headers
  #
  proxy_set_header Host $host;
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;
  proxy_set_header X-Real-IP $remote_addr;

  #
  # Timeouts
  #
  proxy_read_timeout 720s;
  proxy_connect_timeout 720s;
  proxy_send_timeout 720s;

  #
  # SSL
  #
  ssl_certificate /etc/nginx/ssl/francoralite.crt;
  ssl_trusted_certificate /etc/nginx/ssl/francoralite.crt;
  ssl_certificate_key /etc/nginx/ssl/francoralite.pem;
  ssl_protocols TLSv1.2 TLSv1.1 TLSv1;
  ssl_ecdh_curve secp384r1;
  ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:ECDHE-RSA-AES128-GCM-SHA256:AES256+EECDH:DHE-RSA-AES128-GCM-SHA256:AES256+EDH:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:ECDHE-RSA-DES-CBC3-SHA:EDH-RSA-DES-CBC3-SHA:AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-SHA256:AES128-SHA256:AES256-SHA:AES128-SHA:DES-CBC3-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!DES:!MD5:!PSK:!RC4";
  ssl_prefer_server_ciphers on;
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 valid=300s;
  resolver_timeout 5s;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 5m;
  ssl_session_tickets off;

  location / {
    proxy_redirect off;
    proxy_pass http://up_app;
  }
}

